<%- include("./partials/header") -%>

<style>
    input {
        background:transparent;
  border: none;
  }
  </style>
  <br>
  <h1>
    Total Number of Employees:<%=employees.length%>
  </h1>

  <hr>
  <div class="details">
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">EMPLOYEE ID</th>
            <th scope="col">EMPLOYEE NAME</th>
            <th scope="col">CNIC</th>
            <th scope="col">SALARY</th>
            <th scope="col">HIRE DATE</th>
            <th scope="col">BRANCH</th>
            <th scope="col">ADDRESS</th>
            <th scope="col">PHONE NUMBER</th>
            <th scope="col">DELETE</th>

        
          </tr>
        </thead>
        <tbody>
          <% employees.forEach(function(employee){ %>
            <tr>
                <th scope="row">
                 <input type="text"  value=" <%= employee.employee_id %>" name="id" style="width: 5rem; border: 0;" readonly="true">
                </th>
                <th scope="row" >
                <input type="text"  value="  <%= employee.employee_name %>"style="width: 5rem; border: 0;" readonly="true" >
                </th>
                <td >
                 <input type="text" value=" <%= employee.cnic %>" name="class"style="width: 5rem; border: 0;" readonly="true">
                </td>
                <td>
                    <input type="text"  value=" <%= employee.salary %>"style="width: 10rem; border: 0;" readonly="true"> 
                   </td>
                <td>
                 <input type="text"  value=" <%= employee.hire_date %>"style="width: 10rem; border: 0;" readonly="true"> 
                </td>
                <td>
                  <input type="text"  value=" <%= employee.branch %>"style="width: 10rem; border: 0;" readonly="true"> 
                 </td>
                 <td>
                    <input type="text"  value=" <%= employee.address %>"style="width: 10rem; border: 0;" readonly="true"> 
                   </td>
                   <td>
                    <input type="text"  value=" <%= employee.phone %>"style="width: 10rem; border: 0;" readonly="true"> 
                   </td>
                   <td>
                    <a class="delete btn btn-md btn-dark"
                      onclick="return confirm('Are you sure you want to delete this item?');" role="button"
                      href="/delete/employee/<%= employee.employee_id %>" id="print"> <i class="fa-solid fa-delete-left fa-lg"></i></a>
                  </td>
            </tr>

            <% }) %>

        </tbody>
      </table>
    </div>
    <button id="print" onclick="window.print()" class="btn btn-lg btn-dark my-5">PRINT <i
      class="fa-solid fa-print fa-lg"></i></button>
  </div>