<%- include("./partials/header") -%>

  <style>
    input {
      background: transparent;
      border: none;
    }
  </style>
  <br>
  <h1>
    Total Number of Vehicles:<%=vehicles.length%>
  </h1>
  <hr>
  <div class="details">
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">CNIC</th>
            <th scope="col">VEHICLE NO#</th>
            <th scope="col">COMPANY</th>
            <th scope="col">MODEL</th>
            <th scope="col">YEAR</th>
            <th scope="col">BRANCH</th>
            <th scope="col" id="print">DELETE</th>
          </tr>
        </thead>
        <tbody>
          <% vehicles.forEach(function(vehicle){ %>
            <tr>
              <th scope="row">
                <input type="text" value=" <%= vehicle.cnic %>" name="id" style="width: 5rem; border: 0;"
                  readonly="true">
              </th>
              <th scope="row">
                <input type="text" value="  <%= vehicle.plate %>" style="width: 5rem; border: 0;" readonly="true">
              </th>
              <td>
                <input type="text" value=" <%= vehicle.company %>" name="class" style="width: 5rem; border: 0;"
                  readonly="true">
              </td>
              <td>
                <input type="text" value=" <%= vehicle.model %>" style="width: 10rem; border: 0;" readonly="true">
              </td>
              <td>
                <input type="text" value=" <%= vehicle.year %>" style="width: 10rem; border: 0;" readonly="true">
              </td>
              <td>
                <input type="text" value=" <%= vehicle.branch %>" style="width: 10rem; border: 0;" readonly="true">
              </td>

              <td>
                <a class="delete btn btn-md btn-dark"
                  onclick="return confirm('Are you sure you want to delete this item?');" role="button"
                  href="/delete/vehicle/<%=vehicle.plate%>" id="print"> <i
                    class="fa-solid fa-delete-left fa-lg"></i></a>
              </td>
            </tr>

            <% }) %>

        </tbody>
      </table>
    </div>
    <button id="print" onclick="window.print()" class="btn btn-lg btn-dark my-5">PRINT <i
        class="fa-solid fa-print fa-lg"></i></button>
  </div>