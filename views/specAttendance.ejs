<%- include("./partials/header") -%>

<%
function convert(str) {
  var date = new Date(str),
    mnth = ("0" + (date.getMonth() + 1)).slice(-2),
    day = ("0" + date.getDate()).slice(-2);
  return [date.getFullYear(), mnth, day].join("-");
}

%>

  <div class="details">

    <h1>
   NAME: <%= attendances[0].employee_name %>
    </h1>
    <h3 class="text-muted">
      ID: <%= attendances[0].employee_id %>
    </h3>
    <h3 class="text-muted">
      ADDRESS: <%= attendances[0].address %>
    </h3>
    <h3 class="text-muted">
      PHONE NUMBER: <%= attendances[0].phone %>
    </h3>
    <h3 class="text-muted">
      HIRE DATE: <%= attendances[0].hire_date %>
    </h3>
    <h3 class="text-muted">
      CNIC: <%= attendances[0].cnic %>
    </h3>
    <h3 class="text-muted">
      BRANCH: <%= attendances[0].branch %>
    </h3>
    <h3 class="text-muted">
      SALARY: <%= attendances[0].salary %>
    </h3>


  </div>
  <div class="details table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Date </th>
          <th scope="col">Status</th>
          <th scope="col">delete</th>
         

        </tr>
      </thead>
      <tbody>
        <% attendances.forEach(function(day){ %>
          <tr>
            <th scope="row">
              <%= convert(day.pDate) %>
            </th>
            <td>
              <%= day.status %>
            </td>
            
            <td>
    
              <form action="/delete/attendance" method="post">
                <button  name="date" value="<%=convert(day.pDate)%>" class="btn btn-dark btn-md delete" role="button" onclick="return confirm('Are you sure you want to delete this item?');"
                  id="print"><i class="fa-solid fa-delete-left"></i></button>
                <input type="hidden" name="employeeID" value="<%=day.employee_id%>">
              </form>
            </td>
            
          </tr>

          <% }) %>

      </tbody>
    </table>
  </div>

  <button id="print" onclick="window.print()" class="btn btn-lg btn-dark my-5">PRINT <i
      class="fa-solid fa-print fa-lg"></i></button>

  <%- include("./partials/footer") -%>